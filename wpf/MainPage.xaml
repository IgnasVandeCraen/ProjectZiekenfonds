<Page x:Class="wpf.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="This is the Main Page" FontSize="24" />
            <Button Click="GoToSecondPage_Click" Content="Go to Second Page" />
            <Button Click="GoToThirdPage_Click" Content="Go to Third Page" />
        </StackPanel>
        <Frame x:Name="testFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>
    </Grid>
</Page>
